<div id="page-content">
  <h2 class = "text-center mt-4"><%= @article.title %></h2>

  <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center mb-5 bg-white rounded border border-dark">
            <div class="card-header font-italic" style="background-color: #00779E">
              by Stephen Jacobs
            </div>
            <div class="card-body" style="background-color: #eeeeee">
               <div class="card-text text-left"><%= simple_format(@article.description) %></div>
              <p class="btn btn-outline-info"><%= link_to "Edit", edit_article_path(@article) %></p>
              <p class="btn btn-outline-danger"><%= link_to "Delete", article_path(@article),method: :delete, data: {confirm: "Are you sure?"} %></p>
            </div>
            <div class="card-footer text-black" style="background-color: #bbbbbb">
              <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
              Edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
  </div>
  <p><%= link_to 'Create new Article', new_article_path %></p>
</div>