    <div class="container">
      <% flash.each do |name, msg| %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= msg %>
        <button type="button" class="close" data-dismiss="alert" aria_label="Close">
          <span area-hidden="true">&times;</span>
        </button>
      </div>
      <% end %>
</div>